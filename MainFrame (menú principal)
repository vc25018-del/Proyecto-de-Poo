// package com.inmobiliaria.ui;

import javax.swing.*;
import java.awt.*;

public class MainFrame extends JFrame {
    public MainFrame() {
        setTitle("Sistema Inmobiliaria");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(900,600);
        setLocationRelativeTo(null);
        initMenu();
    }

    private void initMenu() {
        JMenuBar menuBar = new JMenuBar();
        JMenu menuGestiones = new JMenu("Gestiones");
        JMenuItem itemPropiedades = new JMenuItem("Propiedades");
        JMenuItem itemClientes = new JMenuItem("Clientes");
        // agregar más items (Empleados, Contratos, Propietarios)
        menuGestiones.add(itemPropiedades);
        menuGestiones.add(itemClientes);
        menuBar.add(menuGestiones);
        setJMenuBar(menuBar);

        // Panel central por defecto
        getContentPane().setLayout(new BorderLayout());
        JPanel defaultPanel = new JPanel();
        defaultPanel.add(new JLabel("Bienvenido al sistema"));
        getContentPane().add(defaultPanel, BorderLayout.CENTER);

        itemPropiedades.addActionListener(e -> {
            getContentPane().removeAll();
            getContentPane().add(new PropiedadPanel(), BorderLayout.CENTER);
            revalidate();
            repaint();
        });

        itemClientes.addActionListener(e -> {
            getContentPane().removeAll();
            // getContentPane().add(new ClientePanel(), BorderLayout.CENTER);
            getContentPane().add(new JPanel().add(new JLabel("Clientes - en construcción")), BorderLayout.CENTER);
            revalidate();
            repaint();
        });
    }
}
