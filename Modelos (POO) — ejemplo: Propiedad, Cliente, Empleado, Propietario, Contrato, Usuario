// package com.inmobiliaria.model;

import java.time.LocalDate;
import java.util.List;

public class Propiedad {
    private String codigo;             // UpperCamelCase clase, lowerCamelCase variables
    private String tipo;               // "casa", "apartamento", "local"
    private String direccion;
    private double precio;             // validar > 0
    private String estado;             // "disponible","vendida","alquilada"
    private String propietarioId;      // id o codigo del propietario

    // constructor, getters, setters
}

public class Cliente {
    private String id;         // documento o id interno
    private String nombre;
    private String apellido;
    private String telefono;
    private String correo;
    private String tipo;       // "comprador" o "arrendatario"
    // constructor, getters, setters
}

public class Empleado {
    private String codigo;
    private String nombre;
    private String cargo;
    private double salario;
    private List<String> propiedadesGestionadas; // lista de códigos de propiedad
    // constructor, getters, setters
}

public class Propietario {
    private String id;
    private String nombre;
    private String telefono;
    private String correo;
    private List<String> propiedades; // códigos asociados
    // constructor, getters, setters
}

import java.time.LocalDate;

public class Contrato {
    private String id;
    private String clienteId;
    private String propiedadCodigo;
    private String tipoOperacion; // "venta" o "alquiler"
    private LocalDate fechaInicio;
    private LocalDate fechaFin; // para alquileres
    private double monto;
    private String empleadoCodigo; // agente responsable
    // constructor, getters, setters
}

public class Usuario {
    private String username;
    private String passwordHash; // almacenar hash en vez de texto plano
    private String rol; // "admin","agente"
    // constructor, getters, setters
}
